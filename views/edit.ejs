<%- include('partials/header') %>

<div class="container">
   <div class="column">
      <h1 style="text-align:center;">Edit <%=cause.name%></h1>

     <div style="width: 30%; margin: 25px auto;">
       <form  action="/causes/<%=cause._id%>?_method=PUT" method="POST">
         <div class="form-group">
           <input class="form-control" type="text" name="cause[name]" value="<%=cause.name%>">
         </div>
         <div class="form-group">
           <input class="form-control" type="text" name="cause[image]" value="<%=cause.image%>">
         </div>
         <div class="form-group">
           <input class="form-control" type="text" name="cause[description]" value="<%=cause.description%>">
         </div>
         <div class="form-group">
           <button class="btn btn-lg btn-primary btn-block">Submit</button>
         </div>

       </form>

        <a href="/causes"> Go back</a>
     </div>

   </div>
</div>

<%- include('partials/footer') %>
